{
    "name": "bensondevs/laravel-midtrans",
    "description": "Laravel wrapper for Midtrans Payments â€” simple, clean integration for Snap, Core API, and subscription billing.",
    "license": "MIT",
    "authors": [
        {
            "name": "Simeon Bensona",
            "email": "bensondevs@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/bensondevs/laravel-midtrans",
    "keywords": [
        "Bensondevs",
        "Laravel",
        "Payment",
        "Midtrans"
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/broadcasting": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/queue": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "symfony/http-foundation": "^6|^7"
    },
    "autoload": {
        "psr-4": {
            "Bensondevs\\Midtrans\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bensondevs\\Midtrans\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bensondevs\\Midtrans\\MidtransServiceProvider"
            ],
            "aliases": {
                "Midtrans": "Bensondevs\\Midtrans\\Facades\\Midtrans"
            }
        }
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8"
    }
}
